/**index.wxss**/
.page-body{
	padding-bottom: 100rpx;
	background-color:#fff;
}
.topInfo{
	border:0rpx solid #ddd;
}
.topInfo{
	padding:20rpx 40rpx 5rpx 40rpx;
}
.productName{
	font-size:17px;
	line-height:60rpx;
	height:60rpx;
  font-weight: bold;
}
.price-num{
	font-size:28rpx;
}
.price-wrap{
	height:60rpx;
	line-height:60rpx;
}
.price-wrap .active{
	color:#f0250f;
	font-size:38rpx;
	margin-right:10rpx;
}
.num-wrap{
	width:45%;
	display:inline-block;
	height:50rpx;
	line-height:50rpx;
}
.num-wrap .num{
	margin-right:6rpx;
}
.midInfo{
  padding:10rpx 40rpx;
	font-size:28rpx;
}
.midInfo .title{
	font-size:34rpx;
	color:black;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.title .line{
  height: 8rpx;
  width: 70rpx;
  position: absolute;
  margin-left: 300rpx;
  background-color: #1677d2;
}
.list-item{
	min-height:10rpx;
  display: flex;
  border-top:1px solid #ddd;
  border-left:1px solid #ddd;
  border-right:1px solid #ddd;
}
.list-item:last-child{
  border-bottom: 1px solid #ddd;
}
.list-item .nameL{
	width:140rpx;
	text-align:center;
	display:block;
	float:left;
  padding: 15rpx 10rpx;
}
.list-item .contentR{
	display:inline-block;
	text-align:left;
  padding: 15rpx;
  font-size:14px; 
	word-break:break-word;
  border-left:1px solid #ddd;
}
.list-item .contentR .txt{
	line-height:60rpx;
	height:60rpx;
	width:240rpx;
}
.productImg{
	width:100%;
	margin-bottom: 40rpx;
}
.footer{
	position:fixed;
	bottom:0;
	width:100%;
	height:90rpx;
	display:flex;
	justify-content: space-around;
	align-items: center;
	background-color: #f0f0f0;
	border-top:1px solid #eee;
}
.link{
	position: relative;
	width:33.3%;
	text-align: center;
	line-height:90rpx;
	height:90rpx;
  color: #1677d2;
	background-color:#fff;
}
.addCart{
	width:33.3%;
	line-height:90rpx;
	height:90rpx;
	text-align: center;
	float:left;
	color:#fff;
	background-color:#43a4ff;
}
.btnBuy{
	width:33.3%;
	line-height:90rpx;
	height:90rpx;
	text-align: center;
	float:left;
	background-color:#1677d2;
	color:#fff;
}
.mark{
	position:absolute;
	font-size:24rpx;
	display:inline-block;
	height:30rpx;
	width:30rpx;
	border-radius:20rpx;
	background-color:red;
	margin-left:-16rpx;
	line-height:30rpx;
	top:10rpx;
}
.addbuy{
	height:42rpx;
	width:42rpx;
	vertical-align:middle;
}
