/**index.wxss**/
/** 整个区域 */
.wxSearch{
  position: absolute;
  top: 47px;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(200, 200, 200, 0.1);
  z-index: 9999;
}

/** 搜索框下面的提示区域 */
.wxSearchInner,.wxSearchProduct{
  background-color: #fff;
}

.wxSearchProduct .list-group{
	position: relative;
    z-index: 0;
    margin-bottom: 10rpx;
    -webkit-box-shadow: none;
    box-shadow: none;
    border-radius: 0;
    border-width: 1px 0;
	padding:20rpx;
  background-color: #fff;
}
.wxSearchProduct .contentL{
	width:70%;
	float:left;
}
.wxSearchProduct .mid{
	font-size:26rpx;
}
.wxSearchProduct .midF{
	margin-right:20rpx;
}
.wxSearchProduct .productName{
	font-size:30rpx;
	display:block;
}
.wxSearchProduct .grad{
	font-size:26rpx;
}
.wxSearchProduct .contentR{
	width:30%;
	display:inline-block;
	padding-top:22rpx;
}
.wxSearchProduct .contentR .active{
	font-size:32rpx;
	color:#ff6c00;
}
.wxSearchProduct .add{
	height:60rpx;
	width:60rpx;
	display:block;
  float: right;
  margin-top: 20rpx;
  margin-right: 30rpx;
}

/** 搜索热点标题 */
.wxSearchTitle{
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 13px;
  text-align: left;
}

/** 提示样式 */
.wxSearchMindKeyItem{
  padding: 10px 5px 10px 15px;
  margin-left: 10px;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 13px;
}

/** 标签样式 */
.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
}

/** 标签样式 */
/** flex: 1 0 20%; */
.wxSearchKeyItem{
  font-size: 13px;
  text-align: center;
  border: 1px solid #eee;
  margin: 5px 15px;
  padding: 4px 5px 4px 5px;
  border-radius: 0px;
  background-color: rgba(200, 200, 200, 0.1);
}

/** 搜索记录标题栏 */
.wxSearchHistoryItem{
  padding-left: 10px;
  padding-top: 10px;
  padding-right: 5px;
  padding-bottom: 5px;
  display: flex;
}

/** 搜索记录标题 */
.wxSearchHistoryItemTitle{
  flex: 8;
  font-size: 13px;
}

/** 搜索记录删除按钮 */
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 13px;
  text-align: center;
  padding-top:2px;
  padding-bottom: 2px;
  border: 1px solid #eee;
  border-radius: 2px;
}
