/**index.wxss**/
.page-bottom{
	height:60rpx;
	width:100%;
}
.weui-form-preview__hd{
  padding: 0px 15px; 
}
.weui-form-preview__label {
  color: #333;
  font-size:15px;
}
.category-wrap{
  display: flex;
  padding: 10px 15px;
}
.bluemark{
  height: 45rpx;
  width: 10rpx;
  margin-right:10rpx;
  margin-top:6rpx;
  background-color: #366ec8;
}
.categoryname{
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}
.numR{
	float:right;
	padding-top:8rpx;
}
.btn{
	display:block;
	height:50rpx;
	width:50rpx;
	border:2rpx solid #ddd;
	text-align:center;
	font-size:28rpx;
}
.btn.minus,.btn.plus{
	line-height:50rpx;
	text-align:center;
	font-size:30rpx;
}
.buy-num{
	float:left;
	text-align:center;
	width:160rpx;
	height:50rpx;
	border:2rpx solid #ddd;
}
.count{
	position:fixed;
	bottom:0;
	width:100%;
	height:80rpx;
	display:flex;
	justify-content: space-around;
	align-items: center;
	background-color: #fff;
	z-index:999;
}
.total{
	width:62%;
	padding-left:30rpx;
}
.btnBuy{
	height:80rpx;
	line-height:80rpx;
	width:35%;
	text-align:center;
	background-color:#366ec8;
	color:#fff;
}

