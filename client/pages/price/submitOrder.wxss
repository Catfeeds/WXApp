/**index.wxss**/
.active{
	color:#ff6c00;
}
.page-bottom{
	height:60rpx;
	width:100%;
}
.numR{
	float:right;
	padding-top:8rpx;
}
.btn{
	display:block;
	height:50rpx;
	width:50rpx;
	border:2rpx solid #ddd;
	text-align:center;
	font-size:28rpx;
}
.btn.minus,.btn.plus{
	line-height:50rpx;
	text-align:center;
	font-size:30rpx;
}
.buy-num{
	float:left;
	text-align:center;
	width:160rpx;
	height:50rpx;
	border:2rpx solid #ddd;
}
.count{
	position:fixed;
	bottom:0;
	width:100%;
	height:80rpx;
	display:flex;
	justify-content: space-around;
	align-items: center;
	background-color: #f0f0f0;
	z-index:999;
}
.total{
	width:67%;
	text-align:right;
	padding-right:20rpx;
}
.btnBuy{
	height:80rpx;
	line-height:80rpx;
	width:33%;
	text-align:center;
	background-color:#366ec8;
	color:#fff;
}

