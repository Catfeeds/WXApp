/**index.wxss**/
@import "../common/lib/weui.wxss";
page {
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.type-wrap{
	border-bottom:2rpx solid #ddd;
	background-color:#f0f0f0;
	font-size:34rpx;
}
.type-wrap-small{
	font-size:30rpx;
}
.list-info-item{
	position: relative;
	width:120%;
	display:flex;
	overflow: hidden;
	transition: margin-left 0.2s ease-in-out;
}
.delete-btn{
    width: 120rpx;
    line-height: 126rpx;
	height:126rpx;
    text-align: center;
    background:#e64340;
    font-size: 24rpx;
    color: #fff;
}
.checkbox{
	width:40rpx;
	height:40rpx;
	vertical-align: middle;
}
.type-wrap .weui-cell__hd{
	zoom:60%;
}
.type-wrap-small .weui-cell__hd{
	zoom:60%;
}
.cartInfo{
	padding:0 30rpx;
	background-color:#f0f0f0;
	margin-bottom:10rpx;
	position:relative;
	width:690rpx;
	display:flex;
}
.cartInfo .productName{
	font-size:28rpx;
	line-height:50rpx;
	height:50rpx;
}
.cartInfo .productInfo,.cartInfo .numInfo{
	font-size:28rpx;
	line-height:50rpx;
	height:50rpx;
}
.cartInfo .productInfo .info-item{
	width:50%;
	float:left;
}
.check__label_L{
	float:left;
}
.checkbox_info{
	margin-top:30rpx;
	zoom:60%;
}
.cartInfoR{
	padding:10rpx 0;
	display:inline-block;
}
.check__label_L .weui-cell__hd{
	vertical-align:middle;
}
.btn{
	display:block;
	height:50rpx;
	width:50rpx;
	border:2rpx solid #ddd;
	text-align:center;
	font-size:28rpx;
}
.btn.minus{
	float:left;
	margin-right:10rpx;
}
.active{
	color:#ff6c00;
}
.btn.plus{
	float:left;
	margin-left:10rpx;
	margin-right:6rpx;
}
.numInfo .priceL{
	float:left;
	margin-right:60rpx;
}
.numInfo .numR{
	float:right;
}
.buy-num{
	float:left;
	text-align:center;
	width:160rpx;
	height:50rpx;
	border:2rpx solid #ddd;
}
.list-group{
	padding-bottom:80rpx;
	border-bottom:2rpx solid #999;
}
.count{
	position:fixed;
	bottom:0;
	width:100%;
	height:80rpx;
	display:flex;
	justify-content: space-around;
	align-items: center;
	background-color: #f0f0f0;
	z-index:999;
}
.btnBuy{
	height:80rpx;
	line-height:80rpx;
	width:33%;
	text-align:center;
	background-color:#366ec8;
	color:#fff;
}
.title-box{
    width: 100%;
    padding-top: 150rpx;
    text-align: center;
    font-size:28rpx;
    color:#999;
    margin-bottom: 50rpx;
}
.cart-null{
	height:100rpx;
	width:100rpx;
	background-position:center;
}
.to-index-btn{
    color:#fff;
    background:#366ec8;
    border-radius:6px;
    width:300rpx;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size:28rpx;
}