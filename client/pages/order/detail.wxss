/**index.wxss**/
.page-top{
  background-color: #f0f0f0;
  height: 8px;
  margin: 0px;
}
.imgShow{
	width: 100%;
    padding-top: 20rpx;
    text-align: center;
    font-size:28rpx;
    color:#999;
    margin-bottom: 20rpx;
}
.count{
	border-top:2rpx solid #999;
	text-align:center;
	font-size:28rpx;
	height:70rpx;
	line-height:70rpx;
}
.type-wrap{
  display: flex;
  padding: 20rpx;
  background-color: #fff;
}
.quIcon{
  height: 50rpx;
  width: 50rpx;
  margin: 6rpx 10rpx 0 0;
}
.gsIcon{
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
  vertical-align:middle;
}
.company-wrap{
  background-color: #fff;
  padding: 20rpx;
}
.gs-wrap{
  padding: 0 10rpx 10rpx;
}
.com-name{
  height: 40rpx;
  line-height: 40rpx;
  color: #333;
  padding-top: 5rpx;
}
.type-cont{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #999;
}
.spec{
  color: #666;
  font-size: 15px;
  padding-left: 10rpx;
}
.order-wrap{
  background-color: #f8f8f8;
  padding: 10rpx 0 10rpx 20rpx;
  margin: 10rpx 0 0 0;
}
.order-wrap-item{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
}
.marks{
  height: 40rpx;
  width: 10rpx;
  background-color: #1677d2;
  margin-right: 10rpx;
  margin-top:6rpx;
}
.proname{
  font-size: 32rpx;
  color: #333;
  width: 70%;
}
.status{
  width: 23%;
  color: #ff4949;
  font-size: 30rpx;
  text-align: right;
}
.preview__label{
  width: 65%;
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #666;
}
.preview__value{
  width: 30%;
  color: #666;
  font-size: 28rpx;
  text-align: right;
}
.amount{
  font-size: 38rpx!important;
  color: #f0250f;
}